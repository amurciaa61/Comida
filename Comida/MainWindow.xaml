<Window
    x:Class="Comida.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Comida"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Comida"
    Width="950"
    Height="700"
    Background="#87CEFA"
    Icon="Imagenes/fruit_food_apple.ico"
    mc:Ignorable="d">
    <Window.Resources>
        <!--  TextBox  -->
        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="0,0,0,10" />
        </Style>
        <!--  CheckBox  -->
        <Style TargetType="CheckBox">
            <Setter Property="Margin" Value="5" />
        </Style>
        <!--  Imagenes alergenos  -->
        <Style x:Key="alergenos" TargetType="Image">
            <Setter Property="Width" Value="25" />
            <Setter Property="Height" Value="25" />
        </Style>
        <Style
            x:Key="milk"
            BasedOn="{StaticResource alergenos}"
            TargetType="Image">
            <Style.Triggers>
                <DataTrigger Binding="{Binding Path=Leche}" Value="False">
                    <Setter Property="Visibility" Value="Collapsed" />
                </DataTrigger>
            </Style.Triggers>
        </Style>
        <Style
            x:Key="gluten"
            BasedOn="{StaticResource alergenos}"
            TargetType="Image">
            <Style.Triggers>
                <DataTrigger Binding="{Binding Path=Gluten}" Value="False">
                    <Setter Property="Visibility" Value="Collapsed" />
                </DataTrigger>
            </Style.Triggers>
        </Style>
        <Style
            x:Key="sulfitos"
            BasedOn="{StaticResource alergenos}"
            TargetType="Image">
            <Style.Triggers>
                <DataTrigger Binding="{Binding Path=Sulfitos}" Value="False">
                    <Setter Property="Visibility" Value="Collapsed" />
                </DataTrigger>
            </Style.Triggers>
        </Style>
        <Style
            x:Key="soja"
            BasedOn="{StaticResource alergenos}"
            TargetType="Image">
            <Style.Triggers>
                <DataTrigger Binding="{Binding Path=Soja}" Value="False">
                    <Setter Property="Visibility" Value="Collapsed" />
                </DataTrigger>
            </Style.Triggers>
        </Style>
        <!--  Plantilla ListBox  -->
        <DataTemplate DataType="{x:Type local:Plato}">
            <Border
                Width="240"
                Height="285"
                Margin="10"
                Background="#F0F8FF"
                BorderBrush="Black"
                BorderThickness="1">
                <Border.Effect>
                    <DropShadowEffect />
                </Border.Effect>
                <DockPanel>
                    <TextBlock
                        x:Name="nombrePlatoTextBlock"
                        HorizontalAlignment="Center"
                        DockPanel.Dock="Top"
                        FontSize="35"
                        Text="{Binding Path=Nombre}" />
                    <DockPanel
                        Height="35"
                        Margin="15,0,15,0"
                        DockPanel.Dock="Bottom">
                        <DockPanel LastChildFill="False">
                            <Image
                                x:Name="banderaImage"
                                DockPanel.Dock="Left"
                                Source="Imagenes/mexico.png" />
                            <StackPanel DockPanel.Dock="Right" Orientation="Horizontal">
                                <Image
                                    x:Name="glutenImage"
                                    Source="Imagenes/gluten.png"
                                    Style="{StaticResource gluten}" />
                                <Image
                                    x:Name="lecheImage"
                                    Source="Imagenes/milk.png"
                                    Style="{StaticResource milk}" />
                                <Image
                                    x:Name="sulfitosImage"
                                    Source="Imagenes/sulfide.png"
                                    Style="{StaticResource sulfitos}" />
                                <Image
                                    x:Name="sojaImage"
                                    Source="Imagenes/soybean.png"
                                    Style="{StaticResource soja}" />
                            </StackPanel>
                        </DockPanel>
                    </DockPanel>
                    <Image
                        Margin="15,10,15,10"
                        Source="{Binding Path=Imagen}"
                        Stretch="Fill" />
                </DockPanel>
            </Border>
        </DataTemplate>
    </Window.Resources>
    <Border
        Margin="10"
        Background="White"
        BorderBrush="Black"
        BorderThickness="1">
        <Grid x:Name="contenedor">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition Width="300" />
            </Grid.ColumnDefinitions>
            <Border Padding="10,10,10,10">
                <ListBox x:Name="listaListBox"
                         ItemsSource="{Binding}">
                    <ListBox.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Width="540"
                                       HorizontalAlignment="Left" />
                        </ItemsPanelTemplate>
                    </ListBox.ItemsPanel>
                </ListBox>
            </Border>
            <Border
                Grid.Column="1"
                Margin="5,10,15,5"
                Padding="10"
                Background="#DCDCDC">
                <StackPanel>
                    <TextBlock Text="Nombre del plato" />
                    <TextBox x:Name="nombreTextBox" Text="{Binding Path=Nombre}" />
                    <TextBlock Text="Foto del plato" />
                    <TextBox
                        x:Name="fotoTextBox"
                        Text="{Binding Path=Imagen}"
                        TextWrapping="Wrap" />
                    <TextBlock Text="Tipo de comida" />
                    <ComboBox
                        x:Name="paisesComboBox"
                        ItemsSource="{Binding}"
                        SelectedItem="1" />
                    <GroupBox
                        Margin="0,10,0,0"
                        Background="#DCDCDC"
                        BorderBrush="Black"
                        Header="Alérgenos">
                        <UniformGrid Columns="2">
                            <CheckBox
                                x:Name="lecheCheckBox"
                                Content="Leche"
                                IsChecked="{Binding Path=Leche}" />
                            <CheckBox Content="Soja" IsChecked="{Binding Path=Soja}" />
                            <CheckBox Content="Gluten" IsChecked="{Binding Path=Gluten}" />
                            <CheckBox Content="Sulfitos" IsChecked="{Binding Path=Sulfitos}" />
                        </UniformGrid>
                    </GroupBox>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>
